{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "baseUrl": ".",
      "jsx": "react",
      "paths": {
          "@root/*": ["./*"],
          "@api/*": ["./api/*"],
          "@indexer/*": ["./indexer/*"],
          "@converter/*": ["./converter/*"]
      },
      "sourceMap": true
    },
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "./node_modules/@types/**/*.d.ts"
    ],
    "exclude": [
      "node_modules"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }